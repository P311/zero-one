{
  "openapi": "3.0.1",
  "servers": [{ "url": "https://careerventureapi.azurewebsites.net" }],
  "info": {
    "title": "ResumeBuilder.Api",
    "version": "1.0"
  },
  "paths": {
    "/Identity/token": {
      "post": {
        "tags": ["Identity"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/TokenRequestApi"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/TokenRequestApi"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/TokenRequestApi"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessTokenResponseApi"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessTokenResponseApi"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessTokenResponseApi"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorTokenResponseApi"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorTokenResponseApi"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorTokenResponseApi"
                }
              }
            }
          }
        }
      }
    },
    "/Users": {
      "post": {
        "tags": ["Users"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserApi"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/UserApi"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/UserApi"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              },
              "application/json": {
                "schema": {
                  "type": "string"
                }
              },
              "text/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              },
              "application/json": {
                "schema": {
                  "type": "string"
                }
              },
              "text/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ErrorTokenResponseApi": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string",
            "nullable": true
          },
          "error_description": {
            "type": "string",
            "nullable": true
          },
          "error_uri": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "SuccessTokenResponseApi": {
        "type": "object",
        "properties": {
          "access_token": {
            "type": "string",
            "nullable": true
          },
          "token_type": {
            "type": "string",
            "nullable": true
          },
          "expires_in": {
            "type": "string",
            "nullable": true
          },
          "refresh_token": {
            "type": "string",
            "nullable": true
          },
          "scope": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "TokenRequestApi": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "nullable": true
          },
          "password": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "UserApi": {
        "required": ["email", "password"],
        "type": "object",
        "properties": {
          "email": {
            "minLength": 1,
            "type": "string"
          },
          "firstName": {
            "type": "string",
            "nullable": true
          },
          "lastName": {
            "type": "string",
            "nullable": true
          },
          "password": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  }
}
